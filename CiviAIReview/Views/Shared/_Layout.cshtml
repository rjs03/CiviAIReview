@{
    @using CiviAIReview.Interface
    var menuService = Context.RequestServices.GetService(typeof(IMenuSvc)) as IMenuSvc;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CiviAI Review</title>

    <!-- CSS Links -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/site.css">

</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-3 d-flex flex-column align-items-start">
                @await Html.PartialAsync("_SidebarMenu", menuService.GetMenuItems())
            </div>

            <!-- Main Content Area -->
            <div class="col-md-10 content p-4">
                <div id="contentArea">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>
